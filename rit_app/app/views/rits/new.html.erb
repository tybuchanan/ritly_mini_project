<div class="container">
	<table class="table table-striped table-bordered table-condensed table-hover">
	
    <thead>
    <tr>
    <th>id</th>
    <th>Link</th>
    <th>Random String</th>
    <th>created at</th>
    <th>upated at</th>
    </tr>
    </thead>
    <tbody>
    <tr>
	<% @rits.each do |rit| %>
    <td><%= link_to rit.id %></td> <!-- id -->
    <td><%= link_to rit.link  %></td> <!-- link -->
    <td><%= link_to rit.random  %></td> <!--random string -->
